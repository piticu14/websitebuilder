                                    <div class="input-group">
                                                <span class="mycolor input-group-addon"><i
                                                            class="glyphicon glyphicon-edit"></i></span>
                                        <input name="subtitle" type="text" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Obrázek</label>

                                <div class="col-md-8 inputGroupContainer">
                                    <div class="input-group">
                                        {*<input type="file" name="image" accept="image/*">*}
                                        <a id="logo_image" class="btn btn-u" href="javascript:;" data-dismiss="modal"
                                           data-toggle="modal" data-target="#logoImageModal">Zvolit obrázek</a>

                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Barva textu</label>

                                <div class="col-md-8 inputGroupContainer">
                                    <div class="input-group">

                                        <div class="bfh-colorpicker" data-name="nav_bgcolor"
